<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Space Blog {% endblock %}</title>
        {% block stylesheets %}
            {# Website Icon #}
            <link rel="icon" href="{{asset('build/images/imali.png')}}">

            {# Jquery #}
            {#<script src="https://code.jquery.com/jquery-3.4.1.js"></script>#}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
            {# Boostrap#}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            {# Font Icons #} {# https://emojikeyboard.top/ #}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">            
            {# Online css librairies for js functions #}
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">

            <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.css" />
            
            {# My CSS #}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>

    {% block header %}
        {% include "space/header.html.twig" %}
    {% endblock %}

    <br>

    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="myAlert alert alert-{{ type }} alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    {% block body %}
    {% endblock %}
    
   
    {% block footer %}
        {% include "space/footer.html.twig" %}
    {% endblock %}


    {% block javascripts %}
        {# Jquery librairies#}
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity=""></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        
        {# Popover librairies #}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        {# Popup photos librairies #}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.isotope/3.0.6/isotope.pkgd.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.js"></script>
        
        {# DataTables #}
        <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>

        {# Fos Js Routing #}
        <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        
        {# My JS#}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
