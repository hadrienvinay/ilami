{% extends "base.html.twig" %}

{% block title %}Photo - Ajout {% endblock %}

{% block body %}
    <br>
    <div class="container" style="padding: 3%;margin-top: 3%;margin-bottom: 3%;border-radius: 0.5rem;background: #fff;">
        <h1 class="text-center">Une p'tite nouvelle image</h1>
        <br>
        {{ form_start(form, {'method': 'post', 'action': path('add_picture')}) }}
        {{ form_widget(form) }}


        <div class="form-group text-center">
            <input class=" btn btn-primary btn-md login-button" type="submit" value="Importer" />
        </div>
        {{ form_rest(form) }}
        {{ form_errors(form) }}
        {{ form_end(form) }}

    </div>
        
{% endblock %}

