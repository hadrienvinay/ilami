{% extends "base.html.twig" %}

{% block title %}Photo - Ajout {% endblock %}

{% block body %}
    <br>
    <div class="container" style="padding: 3%;margin-top: 3%;margin-bottom: 3%;border-radius: 0.5rem;background: #fff;">
        <h2 class="text-center">Un p'tit nouvel album</h2>
        <br>
        {{ form_start(form, {'method': 'post', 'action': path('add_album'), 'attr': {'class': ''}}) }}
        {{ form_widget(form, {'attr': {'class': 'form-group'}}) }}
        <div class="form-group text-center">
            <input class=" btn btn-primary btn-md login-button" type="submit" value="Importer" />
        </div>
        {{ form_rest(form) }}
        {{ form_errors(form) }}
        {{ form_end(form) }}

    </div>
{% endblock %}

