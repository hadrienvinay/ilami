{% extends "base.html.twig" %}

{% block title %}Galleries {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.isotope/3.0.6/isotope.pkgd.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.js"></script>
{% endblock %}

{% block body %}
    <br>
    <div class="container" style="padding: 3%;margin-top: 3%;margin-bottom: 3%;border-radius: 0.5rem;background: #fff;">
        <h1 class="text-center">La P'tite Gallerie</h1>
        <div style="margin:1%;">
            <div class="row">
                <div class="col-md-4">
                    <a id="pic" class="list-group-item active" href="{{ path('gallery') }}">
                        Photos
                    </a>
                </div>
                <div class="col-md-4" >
                    <a id="album" class="list-group-item" href="{{ path('albums') }}">
                        Albums                    
                    </a>                   
                </div>
                <div class="col-md-4">
                     <a id="album2" class="list-group-item" href="{{ path('albums') }}">
                        Autres                    
                    </a>  
                </div>
            </div>
        </div>
        <small class="d-block text-right mt-3">
            <i class="fa fa-download" aria-hidden="true"></i>
            <a href="{{ path('add_picture') }}">Ajouter une photo</a>
        </small>
        <br>
        <div class="portfolio-item row">
            {% for picture in pictures %}
                <div class="item selfie col-lg-3 col-md-4 col-6 col-sm">
                      <a class="fancylight popup-btn" href="{{ asset('build/images/gallery/' ~ picture.id )}}">
                        <img src="{{asset('build/images/gallery/' ~ picture.id )}}" alt="{{ picture.description }}" class="img-fluid">
                      </a>
                      <!--<div class="desc">{% if picture.description is not null%}{{ picture.description }}{% else %}Photo nÂ°: {{ picture.id }}{% endif %}</div>-->
                </div>
            {% endfor %}
        </div>
                   
            </div>
        </div>
    </div>
    
    <script>
        $('.portfolio-item').isotope({
         	itemSelector: '.item',
         	layoutMode: 'fitRows'
         });
         $(document).ready(function() {
            var popup_btn = $('.popup-btn');
            popup_btn.magnificPopup({
            type : 'image',
            gallery : {
                   enabled : true
                }
            });
         });
    </script>
{% endblock %}

