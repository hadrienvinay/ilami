{% extends "base.html.twig" %}

{% block title %}Galleries {% endblock %}


{% block body %}
<br>
    <div class="container" style="padding: 3%;margin-top: 3%;margin-bottom: 3%;border-radius: 0.5rem;background: #fff;">
        <h1 class="text-center">La P'tite Gallerie</h1>
        <br>
        {% for picture in pictures %}
            <div class="responsive">
                <div class="gallery">
                  <a target="_blank" href="{{ asset('build/images/gallery/' ~ picture.path ~ '.jpg')}}">
                    <img src="{{asset('build/images/gallery/' ~ picture.path ~ '.jpg')}}" alt="{{ picture.path }}" width="600" height="400">
                  </a>
                  <div class="desc">{{ picture.desc }}</div>
                </div>
            </div>
        {% endfor %}
        <div class="clearfix"></div>

    </div>
{% endblock %}

