{% extends "base.html.twig" %}

{% block title %} Album {{album.name }} {% endblock %}

{% block body %}
    <br>
    <div class="container" style="padding: 3%;margin-top: 3%;margin-bottom: 3%;border-radius: 0.5rem;background: #fff;">
        <h1 class="text-center">P'tit Album : {{ album.name }}</h1>
        <br>
        {% for picture in album.pictures %}
            <div class="responsive">
                <div class="gallery">
                  <a target="_blank" href="{{ asset('build/images/gallery/' ~ picture.name )}}">
                    <img src="{{asset('build/images/gallery/' ~ picture.name )}}" alt="{{ picture.description }}" width="600" height="400">
                  </a>
                  <div class="desc">{% if picture.description is not null%}{{ picture.description }}{% else %}Photo nÂ°: {{ picture.id }}{% endif %}</div>
                </div>
            </div>          
        {% endfor %}
        
        <div class="clearfix"></div>


    </div>

{% endblock %}

