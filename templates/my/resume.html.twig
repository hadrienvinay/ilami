{% extends "base.html.twig" %}

{% block title %}Résumé{% endblock %}

{% block body %}
    <br>
    <div class="container" style="padding: 3%;margin-top: 3%;margin-bottom: 3%;border-radius: 0.5rem;background: #fff;">
        <h1 class="text-center">Les P'tits Bails</h1>
        <br>
        <div class="my-3 p-3 bg-white rounded box-shadow">
            <h6 class="border-bottom border-gray pb-2 mb-0">Les p'tits évènements</h6>
            {% for event in events|sort((a, b) => a.startdate <=> b.startdate)%}
                {% if event.startdate|date('Y-m-d') > "now"|date('Y-m-d') %}
                    <div class="media text-muted pt-3">
                        {% if "Grand Prix" in event.name %}
                            <img data-src="holder.js/32x32?theme=thumb&amp;bg=dc3545&amp;fg=dc3545&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_16c0a214535%20text%20%7B%20fill%3A%23dc3545%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_16c0a214535%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23dc3545%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2212.166666746139526%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                                <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                                    <a href="{{ path('event',{'id': event.id}) }}">
                                        <strong class="d-block text-gray-dark">{{ event.name }} </strong>
                                    </a>
                                    Lieu :  {{ event.address }} - Qualifications le {{ event.startdate|date('d/m/Y') }} à {{ event.startdate|date('H:i') }} - Course le {{ event.enddate|date('d/m/Y') }} à  {{ event.enddate|date('H:i') }}
                                </p>
                            {% else %}
                            <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_16c0a214535%20text%20%7B%20fill%3A%23007bff%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_16c0a214535%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23007bff%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2212.166666746139526%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                            <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                                <a href="{{ path('event',{'id': event.id}) }}">
                                    <strong class="d-block text-gray-dark">{{ event.name }} </strong>
                                </a>
                                Lieu :  {{ event.address }} du {{ event.startdate|date('d/m/Y') }} à {{ event.startdate|date('H:i') }} au  {{ event.enddate|date('d/m/Y') }} à  {{ event.enddate|date('H:i') }}
                                Description : {{ event.description }}
                            </p>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a id="delete_event{{ event.id }}" class="btn-sm btn-danger delete-event" href="{{ path('delete_event',{'id': event.id}) }}">Supprimer</a>
                        {% endif %}
                        </div>
                {% endif %}
            {% endfor %}

            <small class="d-block text-right mt-3">
                <i class="fa fa-calendar-plus-o" aria-hidden="true"></i>
                <a href="{{ path('add_event') }}">Ajouter un évènement</a>
            </small>

            <h6 class="border-bottom border-gray pb-2 mb-0">Les p'tits évènements passés</h6>
            {% for event in events|sort((a, b) => b.startdate <=> a.startdate)%}
                {% if event.startdate|date('Y-m-d') < "now"|date('Y-m-d') %}
                        {% if "Grand Prix" not in event.name %}
                            <div class="media text-muted pt-3">
                                <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_16c0a214535%20text%20%7B%20fill%3A%23007bff%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_16c0a214535%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23007bff%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2212.166666746139526%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                                <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                                    <a href="{{ path('event',{'id': event.id}) }}">
                                        <strong class="d-block text-gray-dark">{{ event.name }} </strong>
                                    </a>
                                    A eu lieu :  {{ event.address }} du {{ event.startdate|date('d/m/Y') }} à {{ event.startdate|date('H:i') }} au  {{ event.enddate|date('d/m/Y') }} à  {{ event.enddate|date('H:i') }}
                                    Description : {{ event.description }}
                                </p>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a id="delete_event{{ event.id }}" class="btn-sm btn-danger delete-event" href="{{ path('delete_event',{'id': event.id}) }}">Supprimer</a>
                                {% endif %}
                                </div>
                        {% endif %}
                {% endif %}
            {% endfor %}
        </div>

        <div class="my-3 p-3 bg-white rounded box-shadow">
            <h6 class="border-bottom border-gray pb-2 mb-0">Les p'tits loustiques</h6>
            {% for user in users %}
                <div class="media text-muted pt-3">
                        <img class="mr-2 rounded" src="{{asset('build/images/profile/' ~ user.username ~ '.jpg')}}" alt="{{ user.username }}" style="width: 5%;height: 100%;border-radius: 10%;">
                        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                        <a href="{{ path('profile',{'id': user.id}) }}">
                            <strong class="d-block text-gray-dark">{{ user.prename }} {{ user.name }}</strong>
                        </a>
                        Dernière activitée : {{ user.lastlogin|date('d/m/Y') }}
                    </p>
                </div>
            {% endfor %}

            <small class="d-block text-right mt-3">
                <a href="#">Touts les p'tits potos</a>
            </small>
        </div>
    </div>
            
            <!-- Modal confirm cancel an order-->
    <div id="myModal" class="modal">
         <div class="modal-content">
            <div class="modal-header">
                <h2 class="margin-auto">Suppression d'un évènement</h2>
            </div>
            <div class="modal-body">
                <p>Vous allez supprimer cet evènement </p>
                <p>Etes-vous sur?</p>
            </div>
            <div class="modal-footer">
                <a href="" id="btnYes" class="btn btn-danger" data="">Oui</a>
                <a href="#" data-dismiss="modal" aria-hidden="true" class="btn btn-primary">Non</a>
            </div>
         </div>
    </div>
            
            <script>
                $(document).ready(function (){
                    var modal = document.getElementById("myModal");
               
                    $('.delete-event').on('click', function(e) {
                        e.preventDefault();
                        var href = $(this).attr("href");
                        var id = $(this).attr("id");
                        $('#btnYes').attr("href",href);
                        $('#btnYes').attr("data",id);
                        $('#myModal').modal('show');
                    });
                    //delete an event and the correponding bloc
                    $('#btnYes').on('click', function (e) {
                        //e.preventDefault();
                        //var notifUrl = $(this).attr('href');
                        //var div = $(this).attr('data');
                        //var divNum = div.replace('delete_event','');
                        //$.ajax({url: notifUrl,
                         //   success: function(result){
                          //      $('#event'+ divNum).remove();
                           // }});
                    });
                    
                // When the user clicks anywhere outside of the modal, close it
                window.onclick = function(event) {
                  if (event.target == modal) {
                    modal.style.display = "none";
                  }
                };
                
            });

        </script>

{% endblock %}

