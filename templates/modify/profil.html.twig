{% extends "base.html.twig" %}

{% block title %}Profil - Edition {% endblock %}


{% block body %}
<br>
    <div class="container" style="padding: 3%;margin-top: 3%;margin-bottom: 3%;border-radius: 0.5rem;background: #fff;">
        <h1 class="text-center">Une p'tite modification d'profil</h1>
        <br>
        {{ form_start(form, {'method': 'post', 'action': path('modify_profile',{'id': user.id}), 'attr': {'class': ''}}) }}
        {{ form_widget(form, {'attr': {'class': 'form-group'}}) }}
        <div class="form-group text-center">
            <input class=" btn btn-primary btn-md login-button" type="submit" value="Modifier" />
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

